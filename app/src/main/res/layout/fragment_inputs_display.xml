<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                               xmlns:tools="http://schemas.android.com/tools"
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               tools:layout_editor_absoluteY="81dp"
                               tools:layout_editor_absoluteX="0dp" android:id="@+id/fragment1">

        <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp" android:layout_alignParentTop="true" android:layout_marginLeft="10dp">

            <TextView
                    android:text="CAP Calculator "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:textAlignment="center"
                    android:textColor="@android:color/black" android:textStyle="bold" android:textSize="25sp"
                    android:paddingTop="20dp"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tableLayout2" android:layout_alignParentStart="true"
            >

                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:paddingTop="20dp" android:paddingBottom="20dp">
                    <TextView
                            android:text="Current CAP:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/EnterMods"
                            android:layout_alignParentTop="true" android:layout_alignEnd="@+id/creditEarned"
                            android:layout_marginLeft="110dp" android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp" android:layout_marginBottom="6dp"/>
                    <EditText
                            android:layout_width="70dp"
                            android:id="@+id/currGPA"
                            android:inputType="phone"
                            android:background="@drawable/border"
                            android:textAlignment="center"
                            android:layout_toStartOf="@+id/currNumMods"
                            android:layout_marginTop="4dp"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableLayout2" android:layout_above="@+id/submitNewMods"
                    android:layout_alignParentStart="true" android:layout_marginTop="5dp">

                <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:paddingBottom="10dp">
                    <TextView
                            android:text="Credits Earned:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:layout_alignTop="@+id/currNumMods" android:layout_alignParentStart="true"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/creditEarned"
                            android:inputType="phone"
                            android:background="@drawable/border"
                            android:textAlignment="center"
                            android:layout_alignBottom="@+id/spinner1" android:layout_toStartOf="@+id/currNumMods"
                    />
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_marginTop="5dp">
                    <TextView
                            android:text="Number of mods:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView3"
                            android:layout_below="@+id/creditEarned" android:layout_alignStart="@+id/textView4"
                            android:paddingRight="5dp"/>
                    <EditText
                            android:layout_width="70dp"
                            android:layout_height="wrap_content" android:id="@+id/currNumMods"
                            android:inputType="phone"
                            android:background="@drawable/border"
                            android:textAlignment="center"
                            android:layout_alignBottom="@+id/spinner1" android:layout_toStartOf="@+id/currNumMods"
                            android:text="0"/>
                    <TextView
                            android:text="SUs: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:layout_marginLeft="5dp" android:paddingLeft="10dp"/>
                    <EditText
                            android:layout_width="70dp"
                            android:layout_height="wrap_content" android:id="@+id/currNumSU"
                            android:inputType="phone"
                            android:background="@drawable/border"
                            android:text="0"
                            android:textAlignment="center" android:layout_alignBottom="@+id/textView3"
                            android:layout_toEndOf="@+id/textView3" android:layout_marginLeft="10dp"/>
                </TableRow>
            </TableLayout>
            <ScrollView
                    android:id="@+id/layout"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal|vertical"
                    android:layout_width="match_parent"
                    android:scrollbarStyle="outsideInset"
                    android:fillViewport="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/moduleTable"
                            android:layout_marginTop="5dp"
                            android:paddingTop="50dp" android:paddingLeft="15dp">

                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView
                                    android:text="Modules"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView"
                                    android:textAlignment="center" android:layout_marginRight="80dp"/>
                            <TextView
                                    android:text="Grade"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView8"
                                    android:textAlignment="center" android:layout_marginRight="80dp"/>
                            <TextView
                                    android:text="Credits"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                                  android:layout_marginBottom="20dp">
                            <TextView
                                    android:text="Module 1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/textView3" android:layout_alignParentStart="true"
                            />
                            <Spinner
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/spinner1"
                                    android:entries="@array/grades"
                                    android:layout_alignTop="@+id/textView7"
                                    android:layout_alignStart="@+id/creditEarned"
                            />
                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/modCredit1"
                                    android:inputType="phone"
                                    android:background="@drawable/border"
                                    android:textAlignment="center"
                                    android:layout_alignBottom="@+id/spinner1"
                                    android:layout_toStartOf="@+id/currNumMods"
                                    android:text="4"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                                  android:layout_marginBottom="20dp">
                            <TextView
                                    android:text="Module 2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView11"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/spinner1" android:layout_alignStart="@+id/textView7"/>
                            <Spinner
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/spinner2"
                                    android:entries="@array/grades"
                                    android:layout_alignTop="@+id/textView11"
                                    android:layout_alignStart="@+id/spinner1"/>
                            <EditText
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content" android:id="@+id/modCredit2"
                                    android:inputType="phone"
                                    android:background="@drawable/border"
                                    android:textAlignment="center"
                                    android:layout_above="@+id/spinner3" android:layout_alignStart="@+id/modCredit1"
                                    android:text="4"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                                  android:layout_marginBottom="20dp">
                            <TextView
                                    android:text="Module 3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView13"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="17sp"
                                    android:layout_alignTop="@+id/spinner3"
                                    android:layout_alignStart="@+id/textView11"/>
                            <Spinner
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/spinner3"
                                    android:entries="@array/grades"
                                    android:layout_below="@+id/spinner2" android:layout_alignStart="@+id/spinner2"/>
                            <EditText
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content" android:id="@+id/modCredit3"
                                    android:inputType="phone"
                                    android:background="@drawable/border"
                                    android:textAlignment="center"
                                    android:layout_alignBottom="@+id/spinner3"
                                    android:layout_alignStart="@+id/modCredit2"
                                    android:text="4"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                                  android:layout_marginBottom="20dp">
                            <TextView
                                    android:text="Module 4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView14"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/spinner3"
                                    android:layout_alignStart="@+id/textView13"/>
                            <Spinner
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/spinner4"
                                    android:entries="@array/grades"
                                    android:layout_alignTop="@+id/textView14"
                                    android:layout_alignStart="@+id/spinner3"/>
                            <EditText
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content" android:id="@+id/modCredit4"
                                    android:inputType="phone"
                                    android:background="@drawable/border"
                                    android:textAlignment="center"
                                    android:layout_alignBottom="@+id/spinner4"
                                    android:layout_alignStart="@+id/modCredit3"
                                    android:text="4"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                                  android:layout_marginBottom="20dp">
                            <TextView
                                    android:text="Module 5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView5"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="17sp"
                                    android:layout_below="@+id/spinner4" android:layout_alignStart="@+id/textView14"
                            />
                            <Spinner
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/spinner5"
                                    android:entries="@array/grades"
                                    android:layout_alignTop="@+id/textView5" android:layout_alignStart="@+id/spinner4"/>
                            <EditText
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content" android:id="@+id/modCredit5"
                                    android:inputType="phone"
                                    android:background="@drawable/border"
                                    android:textAlignment="center"
                                    android:layout_alignBaseline="@+id/textView5"
                                    android:layout_alignBottom="@+id/textView5"
                                    android:layout_alignStart="@+id/modCredit4" android:text="4"/>
                        </TableRow>
                    </TableLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tableLayout2" android:layout_alignParentStart="true"
                            android:layout_marginLeft="110dp">
                        <TextView
                                android:text="Forecasted CAP:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView9"
                                android:layout_alignBaseline="@+id/textView8"
                                android:layout_alignBottom="@+id/textView8"
                                android:layout_alignParentEnd="true" android:layout_weight="0.06"/>
                        <TextView
                                android:text="-"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/forecastedCap" android:layout_alignBaseline="@+id/textView9"
                                android:layout_alignBottom="@+id/textView9" android:layout_alignEnd="@+id/textView8"
                                android:textColor="@android:color/holo_red_dark" android:textSize="24sp"
                                android:layout_weight="0.80"
                                android:layout_marginTop="4dp" android:layout_marginLeft="3dp"/>
                    </LinearLayout>
                    <Button
                            android:text="Submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/submitNewMods"
                            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
                    />
                </LinearLayout>
        </ScrollView>
        </LinearLayout>





</android.widget.RelativeLayout>
